#:kivy 2.2.1
<Button>
    size_hint: (0.8, 0.8)
    pos_hint: {'center_x': 0.5, 'center_y': 0.5}

<FileChoosePopup>:
    title: "Choose an audio file:"
    size_hint: .8, .8
    auto_dismiss: False

    BoxLayout:
        orientation: "vertical"
        FileChooser:
            id: filechooser
            path: 'C:\\Users\\marcu'
            FileChooserListLayout

        BoxLayout:
            size_hint: (1, 0.1)
            pos_hint: {'center_x': .5, 'center_y': .5}
            spacing: 20
            Button:
                text: "Cancel"
                on_release: root.dismiss()
            Button:
                text: "Load"
                on_release: root.load(filechooser.selection)
                id: ldbtn
                disabled: True if filechooser.selection == [] else False

BoxLayout:
    orientation: 'vertical'
    spacing: 10
    padding: 10
    
    Label:
        text: app.cchord

    GridLayout:
        spacing: 1
        padding: 5
        cols: 3

        Button:
            text: 'Play/Pause'
            size_hint: .8, .8
            on_press: app.toggle_play()

        Button:
            text: 'placeholder'
            size_hint: .8, .8
            on_press: app.chords()

    Button:
        text: app.file_path
        on_press: app.open_popup()
        size_hint: (0.5, 0.5)

